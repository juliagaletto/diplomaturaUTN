<div class="container holder" style="margin:100px auto;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Editar la promoción:</h4>

            <form action="/admin/promociones/editar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{promocion.id}}" name="id">
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Título" name="titulo"
                        value="{{promocion.titulo}}">
                </div>

                <div class="mb-3 row">
                    <textarea class="form-control" placeholder="Descripción"
                        name="descripcion">{{promocion.descripcion}}</textarea>
                </div>
                <div class="mb-3 row">
                    <p>
                        <label>Imagen: <input type="file" name="imagen" id="imagen" /></label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1"> ¿Desea eliminar la
                            imagen actual?</label>
                        <input type="hidden" name="img_original" value="{{promocion.img_id}}">
                    </p>
                </div>

                <button type="submit" class="btn">Guardar cambios</button>
            </form>

            {{#if error}}
            <p style="margin-top: 2%;">{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>